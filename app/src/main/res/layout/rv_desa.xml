<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="25dp"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/biru_muda">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/bebas"
            android:text="ID Desa               :"
            android:textColor="@color/white"
            android:textSize="13pt"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_desa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/bebas"
            android:text="ID"
            android:textColor="@color/white"
            android:textSize="13pt"
            cardview:layout_constraintBottom_toTopOf="@+id/id_kec"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.0"
            cardview:layout_constraintStart_toEndOf="@+id/textView4"
            cardview:layout_constraintTop_toTopOf="parent"
            cardview:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="ID kecamatan  :"
            android:textColor="@color/white"
            android:textSize="13pt"
            cardview:layout_constraintStart_toStartOf="@+id/textView4"
            cardview:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/id_kec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/bebas"
            android:text="ID kecamatan"
            android:textColor="@color/white"
            android:textSize="13pt"
            cardview:layout_constraintBottom_toTopOf="@+id/nama_desa"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.0"
            cardview:layout_constraintStart_toEndOf="@+id/textView5" />

        <TextView

            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bebas"
            android:text="Desa                    :"
            android:textColor="@color/white"
            android:textSize="13pt"
            cardview:layout_constraintStart_toStartOf="@+id/textView5"
            cardview:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/nama_desa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/bebas"
            android:text=" Desa"
            android:textColor="@color/white"
            android:textSize="13pt"
            cardview:layout_constraintBottom_toBottomOf="@+id/textView7"
            cardview:layout_constraintStart_toEndOf="@+id/textView7" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>